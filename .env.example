# ── Supabase (Backend) ─────────────────────────────────────────────────────
SUPABASE_URL=your-project-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ── Supabase (Frontend) ────────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ── Gmail OAuth2 (User Token Auth) ─────────────────────────────────────────
EMAIL_ALIASES=email1@example.com,email2@example.com
FROM_NAME_MAP={"email1@example.com":"Name 1","email2@example.com":"Name 2"}
TOKEN_DIR=./auth_tokens
CLIENT_SECRET_PATH=./auth_tokens/client_secret.json

# ── Session Security ──────────────────────────────────────────────────────
# Generate a random string with: openssl rand -base64 32
NEXTAUTH_SECRET=generate-a-secure-random-string-here
NEXTAUTH_URL=http://localhost:3000